<%= simple_form_for(@source) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :publisher %>
    <%= f.input :city %>
    <%= f.input :copyright_year %>
    <%= f.input :web_site %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
