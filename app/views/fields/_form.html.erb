<%= simple_form_for(@field) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.select(:display_type, Field.display_types.map { |k,v| [k.humanize, k]}) %>
    <%= f.collection_select(:field_category_id, FieldCategory.all, :id, :name) %>
    <%= f.input :options %>
    Please use commas to separate elements for sets
    <%= f.input :force_display %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
